{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "project": {
    "name": "pd-free-angularcli"
  },
  "apps": [
    {
      "root": "src",
      "outDir": "dist",
      "assets": [
        "assets",
        "favicon.ico",
        { "glob": "**/*", "input": "src/assets/", "output": "/assets/" },
        { "glob": "**/*", "input": "../node_modules/leaflet/dist/images/", "output": "src/" }
      ],
      "index": "index.html",
      "main": "main.ts",
      "polyfills": "polyfills.ts",
      "test": "test.ts",
      "tsconfig": "tsconfig.app.json",
      "testTsconfig": "tsconfig.spec.json",
      "prefix": "app",
      "styles": [
        "styles.css",
        "../node_modules/leaflet/dist/leaflet.css",
        "../node_modules/ng2-toastr/bundles/ng2-toastr.min.css",
        "../node_modules/@fortawesome/fontawesome-free/css/all.css",
        "../node_modules/lightgallery.js/dist/css/lightgallery.min.css"
      ],
      "scripts": [
          "../node_modules/jquery/dist/jquery.js",
          "../node_modules/bootstrap/dist/js/bootstrap.js",
          "../node_modules/arrive/src/arrive.js",
          "../node_modules/moment/moment.js",
          "../node_modules/chartist/dist/chartist.js",
          "../node_modules/bootstrap-notify/bootstrap-notify.js",
          "../node_modules/leaflet/dist/leaflet.js",
          "../node_modules/ng2-toastr/bundles/ng2-toastr.min.js",
          "../node_modules/lightgallery.js/dist/js/lightgallery.min.js"
      ],
      "environmentSource": "environments/environment.ts",
      "environments": {
        "dev": "environments/environment.ts",
        "prod": "environments/environment.prod.ts"
      }
    }
  ],
  "e2e": {
    "protractor": {
      "config": "./protractor.conf.js"
    }
  },
  "lint": [
    {
      "project": "src/tsconfig.app.json"
    },
    {
      "project": "src/tsconfig.spec.json"
    },
    {
      "project": "e2e/tsconfig.e2e.json"
    }
  ],
  "test": {
    "karma": {
      "config": "./karma.conf.js"
    }
  },
  "defaults": {
    "styleExt": "css",
    "component": {}
  }
}
